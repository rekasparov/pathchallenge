<div class="container-fluid d-none" id="chat-room-container">
    <div class="row">
        <div class="col-md-12">
            <div class="card" id="chat-room-Istanbul">
                <div class="card-header">
                    <div class="card-title text-center">
                        <h4>PATH Chat Application</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title text-center">
                                        <h6 id="chat-room-history-header">Expected to join a chat room</h6>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <textarea rows="19" class="form-control disabled" id="textarea-chat-room-message-history" disabled></textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control disabled" placeholder="Your messages" aria-label="Your messages" aria-describedby="btn-send-message" data-chatroomname="Istanbul" id="txt-messages" disabled>
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary disabled" type="button" id="btn-send-message" disabled>Send Message</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title text-center">
                                        <h6>Online Chat Rooms</h6>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <ul class="nav flex-column" id="nav-chat-room-list"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="alert alert-danger d-none login-alert" role="alert"></div>
                </div>
            </div>
        </div>
    </div>
</div>